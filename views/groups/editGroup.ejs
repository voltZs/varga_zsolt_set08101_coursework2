<% include ../partials/header %>
      <div class="leftContainer">
          <div class="bubble backShadow">
          <div class="bubbleTop siteBlue menuTypeface whiteText">
            <strong>Edit Group: <%= ventGroup.name %></strong>
          </div>
          <div class="bubbleContent sitePale">

            <form action="/groups/<%= ventGroup._id %>?_method=PUT" method="post" id="groupForm">
              <input type="text" name="name" placeholder="group name" value="<%= ventGroup.name %>"  maxlength="30" required>
              <input type="text" name="keywords" placeholder="add new keywords separated by commas">

              <input type="hidden" name="description" required>
              <div id="editorDivQuill">
              </div>

            </form>

          </div>
          <div class="bubbleBottom sitePale edgeBar">
            <form action="/groups/<%= ventGroup._id %>?_method=DELETE" method="post">
              <span class="edgeBotLeft deleteHover grayText" onclick="javascript:this.parentNode.submit()">
                <i class="fas fa-trash fa-sm"></i> Delete
              </span>
            </form>

            <button type="submit" form="groupForm" value="Vent"
            class="formButton siteBlue  whiteText">
              SAVE
            </button>
          </div>
        </div>

      </div>

      <!-- righandside sidebar -->
      <div class="rightContainer">
        <% include ../partials/sidebar %>
      </div>

      <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
      <script type="text/javascript">
        var content = <%- JSON.stringify(ventGroup.description) %> ;
      </script>
      <script type="text/javascript" src="/JS/richTextEditing.js"></script>

<% include ../partials/footer %>
