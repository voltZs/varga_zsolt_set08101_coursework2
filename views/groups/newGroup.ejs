<% include ../partials/header %>
      <div class="leftContainer">
          <div class="bubble backShadow">
          <div class="bubbleTop siteBlue menuTypeface whiteText">
            <strong>Create new VENT group</strong>
          </div>
          <div class="bubbleContent sitePale">
            <form action="/groups" method="post" id="groupForm">
              <input type="text" name="name" placeholder="group name" maxlength="30" required>
              <input type="text" name="keywords" placeholder="keywords separated by commas">

              <input type="hidden" name="description">
              <div id="editorDivQuill">
              </div>

            </form>
          </div>
          <div class="bubbleBottom sitePale">
            <button type="submit" form="groupForm" value="Creategroup"
            class="formButton siteBlue  whiteText">
              Create Group
            </button>
          </div>
        </div>

      </div>

      <!-- righandside sidebar -->
      <div class="rightContainer">
        <% include ../partials/sidebar %>
      </div>


      <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
      <script type="text/javascript" src="/JS/richTextEditing.js"></script>

<% include ../partials/footer %>
